<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:cardview="http://schemas.android.com/tools"
    android:id="@+id/cardviewdinning_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:layout_marginRight="2dp"
    android:background="@color/orange"
    app:cardElevation="2dp"
    cardview:cardCornerRadius="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="2dp">

        <TextView
            android:id="@+id/dinning_title_id"
            style="@style/Base.TextAppearance.AppCompat.Title"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:textColor="#2d2d2d"
            android:textSize="15sp" />


        <ImageView
            android:id="@+id/dinning_img_id"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/dinning_title_id"
            android:background="@color/colorPrimaryDark"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/dinning_desc_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dinning_img_id"
            android:paddingLeft="5dp"
            android:text=" Dinning desc..."
            android:textColor="#000"
            android:textSize="18sp" />

    </LinearLayout>

</android.support.v7.widget.CardView>