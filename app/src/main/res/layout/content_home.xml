<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.sonyshah.spacewood.home"
    tools:showIn="@layout/app_bar_home">


    <ViewFlipper
        android:id="@+id/v_flipper"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="2dp"
        android:padding="0dp">


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#000000"
            android:paddingBottom="5dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/living" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/reachhall" />


        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/chair" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/slide3" />

    </ViewFlipper>


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignStart="@+id/v_flipper"
        android:layout_below="@+id/v_flipper"
        android:background="#000000">

        <Button
            android:id="@+id/button5"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:layout_marginEnd="2dp"
            android:background="@drawable/ceh1"
            android:text="" />

        <Button
            android:id="@+id/button6"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:layout_column="1"
            android:layout_row="0"
            android:background="@drawable/din"
            android:text="" />

        <Button
            android:id="@+id/button7"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:layout_column="0"
            android:layout_marginEnd="2dp"
            android:layout_marginTop="2dp"
            android:layout_row="1"
            android:background="@drawable/bedori1"
            android:text="" />

        <Button
            android:id="@+id/button8"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:layout_column="1"
            android:layout_marginTop="2dp"
            android:layout_row="1"
            android:background="@drawable/images"
            android:text="" />

    </GridLayout>


</RelativeLayout>
